<idea-plugin>
    <id>org.ask-lang.ask-lang</id>
    <name>Ask</name>
    <vendor email="me@edvard.dev" url="https://ask-lang.org">Ask</vendor>

    <description><![CDATA[
    Language support for the Ask programming language.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Ask File" implementationClass="org.ask.sdk.language.AskFileType"
                  fieldName="INSTANCE" language="Ask" extensions="ask"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>